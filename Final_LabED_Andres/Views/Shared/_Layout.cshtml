<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("COVID-19 INFO", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @*<li>@Html.ActionLink("Inicio", "Index", "Home")</li>*@
                    <li>@Html.ActionLink("Ingresar Paciente", "CrearPaciente", "Hospitales")</li>
                    <li>@Html.ActionLink("Busqueda", "Busquedas", "Home")</li>
                    <li>@Html.ActionLink("Hospital Guatemala", "MenuHospital", "Hospitales", new { hosp = "Guatemala" }, null)</li>
                    <li>@Html.ActionLink("Hospital Petén", "MenuHospital", "Hospitales", new { hosp = "Petén" }, null)</li>
                    <li>@Html.ActionLink("Hospital Chiquimula", "MenuHospital", "Hospitales", new { hosp = "Chiquimula" }, null)</li>
                    <li>@Html.ActionLink("Hospital Escuintla", "MenuHospital", "Hospitales", new { hosp = "Escuintla" }, null)</li>
                    <li>@Html.ActionLink("Hospital Quetzaltenango", "MenuHospital", "Hospitales", new { hosp = "Quetzaltenango" }, null)</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - COVID-19 INFO</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
